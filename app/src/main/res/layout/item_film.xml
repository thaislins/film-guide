<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="film"
            type="com.thaislins.filmguide.modules.film.model.Film" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/marginSmall"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivFilm"
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:background="@color/bunker"
                android:paddingHorizontal="@dimen/paddingMedium"
                android:paddingTop="@dimen/paddingSmall"
                android:text="@{film.title}"
                android:textColor="@color/nevada"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@id/ivFilm"
                app:layout_constraintRight_toRightOf="@id/ivFilm"
                app:layout_constraintTop_toBottomOf="@id/ivFilm" />

            <TextView
                android:id="@+id/tvYear"
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:background="@color/bunker"
                android:paddingHorizontal="@dimen/paddingMedium"
                android:paddingBottom="@dimen/paddingSmall"
                android:text="@{String.valueOf(film.year)}"
                android:textColor="@color/nevada"
                app:layout_constraintLeft_toLeftOf="@id/ivFilm"
                app:layout_constraintRight_toRightOf="@id/ivFilm"
                app:layout_constraintTop_toBottomOf="@id/tvTitle" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>